<?xml version="1.0" encoding="UTF-8"?>
<plugin id="authfront.oauth" enabled="always" label="CONF_MESSAGE[Authfront OAuth]" description="CONF_MESSAGE[Allows Pydio Cells to offer the choice between multiple oauth providers to choose from]">
    <client_settings>
        <resources>
            <js className="AuthfrontOAuth" file="plug/authfront.oauth/res/build/AuthfrontOAuth.js" />
            <i18n namespace="oauth" remote="plug/authfront.oauth/i18n"/>
        </resources>
    </client_settings>
    <registry_contributions>
        <actions>
            <action name="login">
                <gui text="163" title="168" iconClass="icon-signin"
                     accessKey="" hasAccessKey="false">
                    <context selection="false" dir="" recycle="false"
                             actionBar="true" contextMenu="false" infoPanel="false"
                             actionBarGroup="user,admin">
                    </context>
                </gui>
                <rightsContext noUser="false" userLogged="hidden" guestLogged="show" read="false" write="false" adminOnly=""/>
                <processing>
                    <clientCallback module="AuthfrontOAuth.Callbacks.login"/>
                </processing>
            </action>
        </actions>
    </registry_contributions>
</plugin>
